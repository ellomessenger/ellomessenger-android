<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/public_link"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:textColor="@color/brand"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/public_link"
        android:fontFamily="sans-serif-medium"
        />

    <TextView
        android:id="@+id/public_link_value"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/public_link"
        android:textColor="@color/dark"
        android:layout_marginStart="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/public_link_value"
        app:layout_constraintBottom_toBottomOf="@+id/public_link_value"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/share"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/share"
            app:tint="@color/icon_color_selector"
            android:tint="@color/icon_color_selector"
            android:src="@drawable/msg_share" />

        <ImageView
            android:id="@+id/copy"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginEnd="12dp"
            app:tint="@color/icon_color_selector"
            android:tint="@color/icon_color_selector"
            android:contentDescription="@string/CopyLink"
            android:src="@drawable/msg_copy" />


    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>