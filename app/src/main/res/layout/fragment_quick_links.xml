<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginEnd="16dp"
			android:layout_marginBottom="16dp"
			android:orientation="vertical"
			android:paddingTop="16dp"
			android:paddingBottom="16dp">

			<com.google.android.material.card.MaterialCardView
				android:id="@+id/bt_find_friends"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cardCornerRadius="16dp"
				app:strokeWidth="0dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/light_background"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginStart="16dp"
						android:background="@drawable/bg_find_friends"
						android:gravity="center">

						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/ic_find_friends" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="12dp"
						android:layout_marginBottom="12dp"
						android:layout_weight="1"
						android:orientation="vertical">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="16dp"
							android:text="@string/find_friends"
							android:textColor="@color/dark"
							android:textSize="16sp"
							android:textStyle="bold" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="16dp"
							android:layout_marginTop="4sp"
							android:layout_marginEnd="16dp"
							android:text="@string/search_users_channels_groups"
							android:textColor="@color/disabled_text"
							android:textSize="15sp" />

					</LinearLayout>

					<ImageView
						android:layout_width="28dp"
						android:layout_height="28dp"
						android:layout_gravity="center"
						android:layout_marginEnd="16dp"
						android:src="@drawable/ic_forward_arrow" />

				</LinearLayout>

			</com.google.android.material.card.MaterialCardView>

			<com.google.android.material.card.MaterialCardView
				android:id="@+id/bt_create_channel_group_course"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				app:cardCornerRadius="16dp"
				app:strokeWidth="0dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/light_background"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginStart="16dp"
						android:background="@drawable/bg_people"
						android:gravity="center">

						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/ic_people" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="12dp"
						android:layout_marginBottom="12dp"
						android:layout_weight="1"
						android:orientation="vertical">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="16dp"
							android:text="@string/create_a_channel_group_or_course"
							android:textColor="@color/dark"
							android:textSize="16sp"
							android:textStyle="bold" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="16dp"
							android:layout_marginTop="4sp"
							android:layout_marginEnd="16dp"
							android:text="@string/start_channel_group_course"
							android:textColor="@color/disabled_text"
							android:textSize="15sp" />

					</LinearLayout>

					<ImageView
						android:layout_width="28dp"
						android:layout_height="28dp"
						android:layout_gravity="center"
						android:layout_marginEnd="16dp"
						android:src="@drawable/ic_forward_arrow" />

				</LinearLayout>

			</com.google.android.material.card.MaterialCardView>

			<com.google.android.material.card.MaterialCardView
				android:id="@+id/bt_wallet"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				app:cardCornerRadius="16dp"
				app:strokeWidth="0dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/light_background"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginStart="16dp"
						android:background="@drawable/bg_quick_link_wallet"
						android:gravity="center">

						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="18dp"
							android:src="@drawable/small_ello_dollar"
							android:tint="@color/white" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="12dp"
						android:layout_marginBottom="12dp"
						android:layout_weight="1"
						android:orientation="vertical">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="16dp"
							android:text="@string/txt_wallet"
							android:textColor="@color/dark"
							android:textSize="16sp"
							android:textStyle="bold" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="16dp"
							android:layout_marginTop="4sp"
							android:layout_marginEnd="16dp"
							android:text="@string/description_wallet_currency"
							android:textColor="@color/disabled_text"
							android:textSize="15sp" />

					</LinearLayout>

					<ImageView
						android:layout_width="28dp"
						android:layout_height="28dp"
						android:layout_gravity="center"
						android:layout_marginEnd="16dp"
						android:src="@drawable/ic_forward_arrow" />

				</LinearLayout>

			</com.google.android.material.card.MaterialCardView>

			<com.google.android.material.card.MaterialCardView
				android:id="@+id/bt_invite_friends"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				app:cardCornerRadius="16dp"
				app:strokeWidth="0dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/light_background"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginStart="16dp"
						android:background="@drawable/bg_invite_friends"
						android:gravity="center">

						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/ic_invite_friends" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="12dp"
						android:layout_marginBottom="12dp"
						android:layout_weight="1"
						android:orientation="vertical">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="16dp"
							android:text="@string/txt_invite_friends"
							android:textColor="@color/dark"
							android:textSize="16sp"
							android:textStyle="bold" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="16dp"
							android:layout_marginTop="4sp"
							android:layout_marginEnd="16dp"
							android:text="@string/invite_for_credits"
							android:textColor="@color/disabled_text"
							android:textSize="15sp" />

					</LinearLayout>

					<ImageView
						android:layout_width="28dp"
						android:layout_height="28dp"
						android:layout_gravity="center"
						android:layout_marginEnd="16dp"
						android:src="@drawable/ic_forward_arrow" />

				</LinearLayout>

			</com.google.android.material.card.MaterialCardView>

			<com.google.android.material.card.MaterialCardView
				android:id="@+id/bt_explore_ai"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="4dp"
				app:cardCornerRadius="16dp"
				app:strokeWidth="0dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/light_background"
					android:orientation="horizontal">

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center"
						android:layout_marginStart="16dp"
						android:background="@drawable/bg_explore_ai"
						android:gravity="center">

						<ImageView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:src="@drawable/ic_explore_ai" />
					</LinearLayout>

					<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="12dp"
						android:layout_marginBottom="12dp"
						android:layout_weight="1"
						android:orientation="vertical">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="16dp"
							android:text="@string/explore_ai"
							android:textColor="@color/dark"
							android:textSize="16sp"
							android:textStyle="bold" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginStart="16dp"
							android:layout_marginTop="4sp"
							android:layout_marginEnd="16dp"
							android:text="@string/start_ai_bot_description"
							android:textColor="@color/disabled_text"
							android:textSize="15sp" />

					</LinearLayout>

					<ImageView
						android:layout_width="28dp"
						android:layout_height="28dp"
						android:layout_gravity="center"
						android:layout_marginEnd="16dp"
						android:src="@drawable/ic_forward_arrow" />

				</LinearLayout>

			</com.google.android.material.card.MaterialCardView>

		</LinearLayout>

	</ScrollView>

</LinearLayout>
