<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingHorizontal="20dp"
	android:paddingBottom="16dp">

	<ImageView
		android:id="@+id/success_image"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="28dp"
		android:contentDescription="@string/subscription_success"
		android:src="@drawable/panda_success"
		app:layout_constraintBottom_toTopOf="@+id/success"
		app:layout_constraintStart_toStartOf="parent" />

	<TextView
		android:id="@+id/success"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="8dp"
		android:gravity="center"
		android:text="@string/success_excl"
		android:textColor="@color/dark"
		android:textSize="30sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@+id/success_description"
		app:layout_constraintStart_toStartOf="parent" />

	<TextView
		android:id="@+id/success_description"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="156dp"
		android:gravity="center"
		android:text="@string/subscription_success"
		android:textColor="@color/dark"
		android:textSize="16sp"
		app:layout_constraintBottom_toTopOf="@+id/button"
		app:layout_constraintStart_toStartOf="parent" />

	<com.google.android.material.button.MaterialButton
		android:id="@+id/button"
		style="@style/Widget.App.WhiteButtonSmallRadius"
		android:layout_width="match_parent"
		android:layout_height="56dp"
		android:text="@string/Back"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<com.google.android.material.button.MaterialButton
		android:id="@+id/topup_button"
		style="@style/Widget.App.BrandedButtonSmallRadius"
		android:layout_width="match_parent"
		android:layout_height="56dp"
		android:layout_marginBottom="12dp"
		android:text="@string/top_up_wallet"
		android:visibility="gone"
		app:layout_constraintBottom_toTopOf="@id/button"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
