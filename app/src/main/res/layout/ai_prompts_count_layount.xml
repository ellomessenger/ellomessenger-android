<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal">

	<TextView
		android:id="@+id/image_prompt_counter"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="0"
		android:textSize="@dimen/common_size_14dp"
		android:textStyle="bold"
		android:textColor="@color/dark"
		android:paddingEnd="@dimen/common_size_10dp"
		android:paddingStart="@dimen/common_size_4dp"
		android:paddingVertical="@dimen/common_size_4dp"
		android:drawableStart="@drawable/ic_ai_image"
		android:drawablePadding="6dp"
		android:backgroundTint="@color/olive_transparent"
		android:background="@drawable/ai_switch_track"/>

	<TextView
		android:id="@+id/text_prompt_counter"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="2dp"
		android:text="0"
		android:textSize="@dimen/common_size_14dp"
		android:textStyle="bold"
		android:textColor="@color/dark"
		android:paddingEnd="@dimen/common_size_10dp"
		android:paddingStart="@dimen/common_size_4dp"
		android:paddingVertical="@dimen/common_size_4dp"
		android:drawableStart="@drawable/ic_ai_text"
		android:drawablePadding="6dp"
		android:backgroundTint="@color/bright_cyan_transparent"
		android:background="@drawable/ai_switch_track"/>

</LinearLayout>
