<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:id="@+id/subscription_channels"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?selectableItemBackground"
		android:clickable="true"
		android:drawableStart="@drawable/ic_radio"
		android:drawablePadding="12dp"
		android:drawableTint="@color/brand"
		android:focusable="true"
		android:paddingHorizontal="16dp"
		android:paddingVertical="20dp"
		android:text="@string/subscription_channels"
		android:textSize="16sp"
		android:textStyle="bold"
		app:drawableStartCompat="@drawable/ic_radio"
		app:drawableTint="@color/brand" />

	<View
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="@color/divider" />

	<TextView
		android:id="@+id/total_balance"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?selectableItemBackground"
		android:clickable="true"
		android:drawableStart="@drawable/coin"
		android:drawablePadding="12dp"
		android:drawableTint="@color/brand"
		android:focusable="true"
		android:paddingHorizontal="16dp"
		android:paddingVertical="20dp"
		android:text="@string/total_balance"
		android:textSize="16sp"
		android:textStyle="bold"
		app:drawableStartCompat="@drawable/coin"
		app:drawableTint="@color/brand" />

	<View
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="@color/divider" />

	<TextView
		android:id="@+id/transfer_out"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?selectableItemBackground"
		android:clickable="true"
		android:drawableStart="@drawable/ic_money_send"
		android:drawablePadding="12dp"
		android:drawableTint="@color/brand"
		android:focusable="true"
		android:paddingHorizontal="16dp"
		android:paddingVertical="20dp"
		android:text="@string/transfer_out"
		android:textSize="16sp"
		android:textStyle="bold"
		app:drawableStartCompat="@drawable/ic_money_send"
		app:drawableTint="@color/brand" />

	<View
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="@color/divider" />

	<TextView
		android:id="@+id/payments_options"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="?selectableItemBackground"
		android:clickable="true"
		android:drawableStart="@drawable/withdraw"
		android:drawablePadding="12dp"
		android:drawableTint="@color/brand"
		android:focusable="true"
		android:paddingHorizontal="16dp"
		android:paddingVertical="20dp"
		android:text="@string/payment_options"
		android:textSize="16sp"
		android:textStyle="bold"
		app:drawableStartCompat="@drawable/withdraw"
		app:drawableTint="@color/brand" />

	<View
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:background="@color/divider" />

</LinearLayout>
