<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/transparent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:paddingStart="4dp"
		android:paddingEnd="16dp"
		android:paddingBottom="16dp">

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:contentDescription="@null"
				android:importantForAccessibility="no"
				android:scaleType="fitXY"
				android:src="@drawable/feed_view_background"
				android:tint="@color/feed_item_background_tint"
				android:tintMode="multiply"
				app:tint="@color/feed_item_background_tint" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="20dp"
				android:layout_marginTop="6dp"
				android:layout_marginEnd="10dp"
				android:orientation="vertical">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:lineSpacingMultiplier="1"
					android:text="@string/intro_1"
					android:textColor="@color/text"
					android:textSize="20sp"
					android:textStyle="bold" />

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:lineSpacingMultiplier="1"
					android:text="@string/intro_1_msg"
					android:textColor="@color/text"
					android:textSize="18sp" />

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="140dp"
					android:layout_marginTop="4dp"
					android:layout_marginBottom="8dp"
					android:contentDescription="@string/intro_1_cont_desc"
					android:src="@drawable/intro_1" />

			</LinearLayout>

		</FrameLayout>

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="12dp"
			android:orientation="vertical">

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:contentDescription="@null"
				android:importantForAccessibility="no"
				android:scaleType="fitXY"
				android:src="@drawable/feed_view_background"
				android:tint="@color/feed_item_background_tint"
				android:tintMode="multiply"
				app:tint="@color/feed_item_background_tint" />

			<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="20dp"
				android:layout_marginTop="6dp"
				android:layout_marginEnd="10dp"
				android:orientation="vertical"
				android:paddingBottom="8dp">

				<TextView
					android:id="@+id/msg_2_label"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:lineSpacingMultiplier="1"
					android:text="@string/intro_2_msg"
					android:textColor="@color/text"
					android:textSize="18sp"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:layout_constraintTop_toTopOf="parent" />

				<ImageView
					android:id="@+id/call_icon"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="4dp"
					android:importantForAccessibility="no"
					android:src="@drawable/outgoing"
					android:tint="@color/online"
					app:layout_constraintBottom_toBottomOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					app:tint="@color/online" />

				<ImageView
					android:layout_width="31dp"
					android:layout_height="41dp"
					android:layout_marginTop="4dp"
					android:importantForAccessibility="no"
					android:src="@drawable/calls_intro"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintTop_toBottomOf="@id/msg_2_label" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="8dp"
					android:importantForAccessibility="no"
					android:text="@string/intro_call_time"
					android:textColor="@color/dark_gray"
					app:layout_constraintBottom_toBottomOf="@id/call_icon"
					app:layout_constraintStart_toEndOf="@id/call_icon"
					app:layout_constraintTop_toTopOf="@id/call_icon" />

			</androidx.constraintlayout.widget.ConstraintLayout>

		</FrameLayout>

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="12dp"
			android:orientation="vertical">

			<ImageView
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:contentDescription="@null"
				android:importantForAccessibility="no"
				android:scaleType="fitXY"
				android:src="@drawable/feed_view_background"
				android:tint="@color/feed_item_background_tint"
				android:tintMode="multiply"
				app:tint="@color/feed_item_background_tint" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="20dp"
				android:layout_marginTop="6dp"
				android:layout_marginEnd="10dp"
				android:orientation="vertical">

				<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="4dp"
					android:lineSpacingMultiplier="1"
					android:text="@string/intro_3_msg"
					android:textColor="@color/text"
					android:textSize="18sp" />

				<ImageView
					android:layout_width="match_parent"
					android:layout_height="120dp"
					android:layout_marginTop="4dp"
					android:layout_marginBottom="4dp"
					android:contentDescription="@string/intro_2_cont_desc"
					android:src="@drawable/intro_2" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="12dp"
					android:background="@drawable/intro_bottom_corner_background"
					android:gravity="center_horizontal"
					android:orientation="vertical"
					android:padding="8dp">

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:text="@string/subscription_channel"
						android:textColor="@color/brand"
						android:textSize="12sp" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="2dp"
						android:gravity="center"
						android:text="@string/intro_price"
						android:textColor="@color/brand"
						android:textSize="18sp"
						android:textStyle="bold" />

				</LinearLayout>

			</LinearLayout>

		</FrameLayout>

	</LinearLayout>

</ScrollView>
