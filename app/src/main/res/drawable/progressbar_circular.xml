<rotate xmlns:android="http://schemas.android.com/apk/res/android"
	android:duration="0"
	android:fromDegrees="0"
	android:pivotX="50%"
	android:pivotY="50%"
	android:toDegrees="-360">

	<shape
		android:innerRadiusRatio="3"
		android:shape="ring"
		android:thicknessRatio="80"
		android:useLevel="false">

		<size
			android:width="130dip"
			android:height="130dip" />

		<gradient
			android:centerColor="@color/brand"
			android:centerY="0.5"
			android:endColor="@android:color/transparent"
			android:startColor="@color/brand"
			android:type="sweep"
			android:useLevel="false" />
	</shape>

</rotate>
